<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.miguelflores.espressotest"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.FirstActivity">

        </activity>

        <activity android:name=".activities.TextViewActivity"/>
        <activity android:name=".activities.ServiceActivity"/>
        <activity android:name=".activities.EditTextActivity"/>
        <activity android:name=".activities.ButtonActivity"/>
        <activity android:name=".activities.CheckboxActivity"/>
        <activity android:name=".activities.SpinnerActivity"/>
        <activity android:name=".activities.RecyclerViewActivity"/>
        <activity android:name=".activities.ImageViewActivity"/>
        <activity android:name=".activities.ListViewActivity"/>
        <activity android:name=".activities.IdlingResourcesActivity"/>
    </application>

</manifest>